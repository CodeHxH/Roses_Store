{{>navigation}}
<div class="cart__main--container">

    <div class="cart--container">
        <div class="cart--header">
            <h3>Tu lista de productos</h3>
        </div>
        {{#if UserCart}}
        {{#each UserCart}}
            <div class="product__card--container">
                <div class="product--card">
                    <div class="cart--item">
                        <h2>{{product.name}}</h2>
                        <p>{{product.price}} $</p>
                    </div>
                </div>

                <form action="/cart/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit">
                        <i class="bi bi-x"></i>
                    </button>
                </form>

            </div>
        {{/each}}
        {{else}}
        <p>No hay ningun producto en el carrito</p>
        {{/if}}
        <div class="line"></div>
        <div class="Subtotal--container">
            <p class="Subtotal">Subtotal</p>
            <p class="Subtotal">{{subtotal}} $</p>
        </div>
    </div>
    <div class="btn--right">
        <a href="#" class="btn">Pagar</a>
    </div>
</div>

