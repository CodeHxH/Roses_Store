{{>navigation}}
<div class="cart__container">
	<div class="cart">
		<div class="cart__info">
			<div class="cart__header">
				<h3>Tu lista de productos</h3>
			</div>

			{{#if UserCart}} 
				{{#each UserCart}}
					<div class="cart__item">
						<div class="item__card">
							<div class="item">
								
								<img src="{{product.img}}" alt="">

								<div>
									<h2>COD. {{product.name}}</h2>
									<p>{{product.price}}.00 $</p>
								</div>
							</div>
						</div>

						<form action="/cart/delete/{{_id}}?_method=DELETE" method="POST">
							<input type="hidden" name="_method" value="DELETE" />
							<button type="submit">
								<i class="bi bi-x"></i>
							</button>
						</form>
					</div>
				{{/each}} 
			{{else}}
			<p class="cart__blank">No hay ning√∫n producto en el carrito...</p>
			{{/if}}

			<div class="line"></div>

			<div class="cart__subtotal">
				<p>Subtotal</p>
				<p>{{subtotal}}.00 $</p>
			</div>
		</div>
		<div class="cart__btn">
			<a href="/order" class="btn">Siguiente</a>
		</div>
	</div>
</div>

<div class="footer--bg">
	{{>footer}}
</div>
